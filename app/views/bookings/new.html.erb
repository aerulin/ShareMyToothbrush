<div class='container container-new-form'>
  <div class="form-container">
    <%= simple_form_for [ @toothbrush, @booking ] do |f| %>
      <%= f.input :start_date %>
      <%= f.input :end_date %>
      <%= f.submit "Send request", class: "btn btn-primary btn-home" %>
    <% end %>
  </div>
</div>

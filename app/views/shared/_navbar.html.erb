  <%= link_to "/", class: "navbar-brand" do %>
    <%= image_tag "https://res.cloudinary.com/dg2an4buq/image/upload/v1637763512/logo-toothbrush_x84yiz.png" %>
  <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item">
        <%= link_to "Available Tootbrushes", "/toothbrushes", class: "nav-link" %>
      </li>
      <% if user_signed_in? %>
          <li class="nav-item">
          <%= link_to "ðŸª¥Rent your toothbrush", "/toothbrushes/new", class: "btn btn-primary btn-home btn-soso" %>
        </li>
          <li class="nav-item dropdown">
            <%=cl_image_tag current_user.photo.key, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false%>

<div class='container'>

  <div class='title'>
    <h2>Add a new Toothbrush</h2>
  </div>

  <div class="form-container">
    <%= simple_form_for @toothbrush do |f| %>
      <%= f.input :title %>
      <%= f.input :description %>
      <%= f.input :price %>
      <%= f.input :condition %>
      <%= f.input :brand %>
      <%= f.input :category_id %>
      <%= f.input :user_id %>
      <%= f.submit "Submit review", class: "btn btn-primary" %>
    <% end %>
  </div>


</div>
